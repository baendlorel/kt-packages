{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "declaration": false, // 是否生成声明文件, 选择false然后由rollup配置全权掌握
    "esModuleInterop": true, // 可选，增强兼容性
    "strict": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
