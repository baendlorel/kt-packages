	"type": "module",
	"exports": {
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts",
		"default": "./dist/index.mjs"
	},
	"files": [
		"dist"
	],
	"homepage": "https://github.com/baendlorel/wildcard-event#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/baendlorel/wildcard-event"
	},
	"keywords": [
		"JavaScript",
		"TypeScript",
		"event",
		"bus",
		"node",
		"nodejs"
	],
	"scripts": {
